<UserControl x:Class="JhDeStip.Laguna.Player.Views.InfoMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JhDeStip.Laguna.Player.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 Style="{StaticResource ContentView}"
			 DataContext="{Binding InfoMessageViewModel, Source={StaticResource viewModelLocator}}">
	
	<Label Content="{Binding Message}" Style="{StaticResource InfoMessage}" />
	
</UserControl>
