<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:c="clr-namespace:JhDeStip.Laguna.Player.Converters">
	<!-- Playable item list item -->
	<DataTemplate x:Key="playableItemDataTemplate">
		<Grid Background="#121314">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Image Grid.Column="0" Source="{Binding ThumbnailUrl, Converter={StaticResource thumbnailImageSourceConverter}}" />
			<StackPanel Grid.Column="1">
				<Label>
					<TextBlock Text="{Binding Title}" FontSize="18" TextTrimming="CharacterEllipsis" Foreground="#DFE0E6" />
				</Label>
				<Label Content="{Binding Duration, Converter={StaticResource durationTimeStringConverter}}" FontSize="15" Foreground="#88898C" />
			</StackPanel>
		</Grid>

	</DataTemplate>
</ResourceDictionary>